<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/leads_bg"
    android:paddingTop="14dp"
    android:paddingBottom="14dp"
    android:paddingStart="28dp"
    android:paddingEnd="28dp">

    <TextView
        android:id="@+id/action_action"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Action"
        android:textSize="16sp"
        android:fontFamily="@font/poppins_semibold"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:id="@+id/action_t_action"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:text="Action : "
        android:textSize="12sp"
        android:fontFamily="@font/poppins_medium"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/action_action" />

    <TextView
        android:id="@+id/txt_action_action"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:text="no answer"
        android:textSize="12sp"
        android:fontFamily="@font/poppins_medium"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@+id/action_t_action"
        app:layout_constraintTop_toBottomOf="@+id/action_action" />

    <TextView
        android:id="@+id/comment_action"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:text="Comment : "
        android:textSize="12sp"
        android:fontFamily="@font/poppins_medium"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/action_t_action" />

    <TextView
        android:id="@+id/txt_comment_action"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:text="asjkhk as n ks  n n"
        android:maxLines="2"
        android:textSize="12sp"
        android:fontFamily="@font/poppins_medium"
        android:textColor="@color/black"

        app:layout_constraintStart_toEndOf="@+id/comment_action"
        app:layout_constraintTop_toBottomOf="@+id/action_t_action"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>