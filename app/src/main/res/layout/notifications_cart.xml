<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/leads_bg"
    android:paddingTop="14dp"
    android:paddingBottom="14dp"
    android:paddingStart="28dp"
    android:paddingEnd="28dp"
    android:layout_marginBottom="@dimen/_4sdp">



    <ImageView
        android:id="@+id/notifications_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_logo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>




    <TextView
        android:id="@+id/txt_notifications_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="asjkhk as n ks  n n"
        android:maxLines="2"
        android:textAlignment="center"
        android:layout_marginStart="@dimen/_4sdp"
        android:textSize="12sp"
        android:fontFamily="@font/poppins_medium"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@id/notifications_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
    <TextView
        android:id="@+id/txt_notifications_date"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="asjkhk as n ks  n n"
        android:maxLines="2"
        android:layout_marginTop="@dimen/_4sdp"
        android:textAlignment="textEnd"
        android:layout_marginEnd="@dimen/_4sdp"
        android:layout_marginStart="@dimen/_4sdp"
        android:textSize="10sp"
        android:fontFamily="@font/poppins"
        app:layout_constraintStart_toEndOf="@id/notifications_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txt_notifications_text"
        />


</androidx.constraintlayout.widget.ConstraintLayout>